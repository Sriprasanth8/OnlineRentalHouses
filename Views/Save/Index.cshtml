@model IEnumerable<RentalPro>

<div class="container mt-6">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active">Save</li>
        </ol>
    </nav>
    <div class="row">
        @if (Model.Count() == 0)
        {
            <div class=" col-12 heading-section text-center">
            <div class="mt-5">
                <span class="subheading text-info">Opps...</span>
                <h2 class="mb-4">Empty save list</h2>
            </div>
        </div>
                        <div class="col-12 heading-section text-center mb-5">
                            <a asp-controller="RentalPro" asp-action="Upsert" class="text-success">search rental property <i class="fas fa-angle-double-right"></i></a>
                        </div>
        }
        else
        {
            <div class=" col-12 heading-section text-center">
                <div class="mt-3 mb-5">
                    <span class="subheading text-info">...</span>
                    <h2 class="mb-4">Save list</h2>
                </div>
            </div>  
            <div class="col-md-6">
                @foreach (var obj in Model)
                {
                <div class="card w-100">
                    <img src="@WC.ImagePath@obj.Image" class="card-img-top" alt="property-images">
                    <div class="card-body">
                        <h5 class="card-title"><i class="fas fa-area-chart"></i>@obj.SquareFt sq.ft Independent House for rent in @obj.City</h5>
                        <div class="row mt-2">
                            <div class="col-4">
                                <p>Rent</p>
                                <span class="h3">@obj.Rent</span> /bed
                            </div>
                            <div class="col-4">
                                <p>Square.ft</p>
                                <span class="h3">@obj.SquareFt</span> /sq.ft
                            </div>
                            <div class="col-4">
                                <p>Bedroom</p>
                                <span class="h3">@obj.BedRoom</span> /BHK
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="offset-6 col-md-6">
                                <a target="_blank" asp-action="Remove" asp-route-id="@obj.Id" class="btn btn-danger w-100">
                                    Remove from save
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                }
            </div>
            <div class="col-12 text-center m-3">
                <a asp-controller="RentalPro" asp-action="Index2">
                    Search more property <i class="fas fa-angle-double-right"></i>
                </a>
            </div>
        }
    </div>
</div>