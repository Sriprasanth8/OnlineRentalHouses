@model Floor.Models.RentalPro

<div class="filter @Model.ProCategory.Name.Replace(' ','_') @Model.ProAvailability.Name.Replace(' ','_') @Model.ProFurnished.Name.Replace(' ','_')">
    <div class="card m-3">
        <div class="row">
            <div class="col-md-4">
                <img width="100%" height="100%" src="@WC.ImagePath@Model.Image" class="card-img p-3" alt="property-img"/>
            </div>
            <div class="col-md-8 ps-md-0">
                <a class="text-dark" asp-action="Details" asp-route-id="@Model.Id" target="_blank">
                    <div class="card-body ps-md-0">
                        <p>@Model.BedRoom Bedroom Independent House for rent in @Model.City</p>
                        <div class="row">
                            <div class="col-4">
                                <span class="h3">@Model.Rent</span> /month
                            </div>
                            <div class="col-4">
                                <span class="h3">@Model.SquareFt</span> /sq.ft
                            </div>
                            <div class="col-4">
                                <span class="h3">@Model.BedRoom</span> BHK
                            </div>
                        </div>
                        <p class="pt-2">@Model.Description</p>
                        <hr />
                        <div class="d-flex">
                            <p class="btn mb-0 ps-0">@Model.ProAvailability.Name</p>
                            <i title="Owner" class="fas fa-user text-info fa-2x ms-auto"></i>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
