        </div>
        <form id="account" method="post">
            <h1 class="h3 mb-3 text-white">@ViewData["Title"]</h1>
            <p class="mb-3 text-dark">Sign up and discover more rental property!</p>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-4">
                <input asp-for="Input.FullName" class="form-control accept-policy bg-transparent ps-1 mt-4" id="floatingInput" placeholder="name">
                <label asp-for="Input.FullName" class="ps-0"></label>
                <span asp-validation-for="Input.FullName" class="text-danger float-start"></span>
            </div>
            <div class="form-floating mb-4">
                <input asp-for="Input.Email" class="form-control bg-transparent ps-1" id="floatingInput" placeholder="name@gmail.com">
                <label asp-for="Input.Email" class="ps-0"></label>
                <span asp-validation-for="Input.Email" class="text-danger float-start"></span>
            </div>
            <div class="form-floating mb-4">
                <input asp-for="Input.PhoneNumber" class="form-control bg-transparent ps-1" id="floatingInput" placeholder="0011001100">
                <label asp-for="Input.PhoneNumber" class="ps-0"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger float-start"></span>
            </div>
            <div class="form-floating mb-4">
                <input asp-for="Input.Password" class="form-control bg-transparent ps-1" id="floatingInput" placeholder="Password">
                <label asp-for="Input.Password" class="ps-0"></label>
                <span asp-validation-for="Input.Password" class="text-danger float-start"></span>
            </div>
            <div class="form-floating mb-4">
                <input asp-for="Input.ConfirmPassword" class="form-control bg-transparent ps-1" id="floatingInput" placeholder="Password">
                <label asp-for="Input.ConfirmPassword" class="ps-0"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger float-start"></span>
            </div>
            @if (User.IsInRole(Floor.WC.AdminRole))
            {
                <button class="w-100 btn btn-lg btn-warning mb-3 rounded-0" type="submit">Register Admin</button>
            }
            else
            {
                <button class="w-100 btn btn-lg btn-success mb-3 rounded-0" type="submit">Register</button>
            }
        </form>
    </main>

</div>

